<p id="notice"><%= notice %></p>

<h1>Sleeps</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.sleeps.each do |sleep| %>
      <tr>
        <td></td>
        <td><%= sleep.id %></td>
        <td><%= sleep.sleepPoint %></td>

        <td><%= link_to 'Show', user_sleep_path(@user, @sleep) %></td>
        <td><%= link_to 'Edit', edit_user_sleep_path(@user, @sleep) %></td>
        <td><%= link_to 'Destroy',[@user, @sleep] , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sleep', new_user_sleep_path %>
